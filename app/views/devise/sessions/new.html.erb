<h2><% content_for :page_title, "Log in"%></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class=" d-flex flex-column justify-content-center align-items-center">
  <div class="field form-group mb-2 col">
    <%= f.label :email, class: " text-align-center justify-content-center align-items-center"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mx-sm-3 mb-2" %>
  </div>

  <div class="field col">
    <%= f.label :password,  class: " text-align-center justify-content-center align-items-center" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control mx-sm-3 mb-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field d-flex m-2 ">
      <%= f.check_box :remember_me, class:"m-1"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions col">
    <%= f.submit "Log in", class: "btn btn-primary mb-" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
   </div>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class=" d-flex flex-column justify-content-center align-items-center">
  <div class="field form-group mb-2 col">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mx-sm-3 mb-2" %>
  </div>

  <div class="field form-group mb-2 col">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mx-sm-3 mb-2" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mx-sm-3 mb-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary " %>
  </div>
<% end %>
<%= render "devise/shared/links", class: "btn btn-primary" %>
</div>

